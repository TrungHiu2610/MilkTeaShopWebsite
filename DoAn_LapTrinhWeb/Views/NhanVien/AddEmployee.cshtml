@using DoAn_LapTrinhWeb.Models;
@model NguoiDung


@{
    ViewBag.Title = "AddEmployee";
    Layout = "~/Views/Shared/_LayoutPageNhanVien.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.Message as string))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

<div class="breadcrumbs">
    <div class="locations" style="margin-left: 15%;">
        <a href="@Url.Action("Index", "Home")"><img src="~/Content/Image/home.svg" /></a>
    </div>
    <div class="locations">
        <img src="~/Content/Image/Next.svg" />
    </div>
    <div class="locations">
        <a href="/NhanVien/Employees/" style="text-decoration:none; color: #808080">Nhân Sự</a>
    </div>
    <div class="locations">
        <img src="~/Content/Image/Next.svg" />
    </div>
    <div class="locations">
        <span style="color: #C58A66">Thêm nhân viên</span>
    </div>
</div>

<div class="container">
    <form method="post" action="/NhanVien/AddEmployee" enctype="multipart/form-data">
        <fieldset>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Họ tên</th>
                        <td>
                            <input type="text" name="HoTen" class="form-control" />
                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <th>Số điện thoại</th>
                        <td>
                            <input type="tel" name="SoDienThoai" class="form-control" />
                            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                        </td>
                        <th>Mật khẩu</th>
                        <td>
                            <input type="password"  name="MatKhau" class="form-control" />
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <th>Địa chỉ</th>
                        <td>
                            <input type="text" name="DiaChi" class="form-control" />
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <th>Hành động</th>
                        <td>
                            <div class="form-check">
                                <input type="radio" name="action" value="ThemTiep" id="ThemTiep" checked />
                                <label for="ThemTiep">Thêm tiếp</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" name="action" value="QuayLaiDanhSach" />
                                <label>Quay lại danh sách</label>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center mt-3">
                <input type="hidden" value="NV" name="MaQuyen" />
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </fieldset>
    </form>
</div>