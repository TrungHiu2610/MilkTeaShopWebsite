@using DoAn_LapTrinhWeb.Models;
@model LoaiSanPham

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_LayoutPageNhanVien.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.Message as string))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

<div class="breadcrumbs">
    <div class="locations" style="margin-left: 15%;">
        <a href="@Url.Action("Index", "NhanVien")"><img src="~/Content/Image/home.svg" /></a>
    </div>
    <div class="locations">
        <img src="~/Content/Image/Next.svg" />
    </div>
    <div class="locations">
        <a href="/NhanVien/Categories/" style="text-decoration:none; color: #808080">Danh mục Sản Phẩm</a>
    </div>
    <div class="locations">
        <img src="~/Content/Image/Next.svg" />
    </div>
    <div class="locations">
        <span style="color: #C58A66">Thêm loại sản phẩm</span>
    </div>
</div>


<div class="container">
    <form method="post" action="/NhanVien/AddCategory" enctype="multipart/form-data">
        <fieldset>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Tên loại sản phẩm</th>
                        <td>
                            <input type="text" id="TenLoaiSP" name="TenLoaiSP" class="form-control" />
                            @Html.ValidationMessageFor(model => model.TenLoaiSP, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <th>Hành động</th>
                        <td>
                            <div class="form-check">
                                <input type="radio" name="action" value="ThemTiep" id="ThemTiep" checked />
                                <label for="ThemTiep">Thêm tiếp</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" name="action" value="QuayLaiDanhSach" />
                                <label>Quay lại danh sách</label>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center mt-3">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </fieldset>
    </form>
</div>
